---
import 'bootstrap/dist/css/bootstrap.min.css';
import Footer from '../Components/Footer.astro'

const contactInfo = {
  whatsapp: [
    { number: "+54 9 3764 67-4458", link: "https://wa.me/5493761234567" },
    { number: "+54 9 223 301-7842", link: "https://wa.me/5493769876543" }
  ],
  email: "tekohatech@gmail.com"
};
---

<nav class="navbar navbar-expand-lg navbar-dark bg-dark border border-1 fixed-top navbar-scrolled">
  <div class="container">
    <a class="navbar-brand gradient-text" href="/">
      <img src="/LogoTekoha.png" alt="LogoTekoha" width="50" height="50" class="d-inline-block align-top">
      TekohaTech
    </a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Inicio</a>
        </li><li class="nav-item">
          <a class="nav-link" href="/Nosotros">Nosotros</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Servicios">Servicios</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Planes">Planes</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<section class="contact-section py-5">
  <div class="container mt-5 pt-5">
    <h2 class="text-center gradient-text mb-5">Contacto</h2>
    <p class="text-center text-light mb-5">Estamos aquí para ayudarte. Puedes comunicarte con nosotros a través de los siguientes medios:</p>
    
    <div class="row justify-content-center mb-4">
      <div class="col-md-6 text-center">
        <h3 class="text-light">WhatsApp</h3>
        <ul class="list-unstyled">
          {contactInfo.whatsapp.map(contact => (
            <li class="mb-3">
              <a href={contact.link} target="_blank" class="text-light">
                <i class="fab fa-whatsapp fa-2x me-2"></i>
                {contact.number}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <h3 class="text-light">Email</h3>
        <p class="text-light">
          <i class="fas fa-envelope fa-2x me-2"></i>
          <a href={`mailto:${contactInfo.email}`} class="text-light">{contactInfo.email}</a>
        </p>
      </div>
    </div>
  </div>
</section>
<Footer/>

<style>
  .gradient-text {
    background: linear-gradient(45deg, #026135, #180cc5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .contact-section {
    background: linear-gradient(45deg, #1f11eb, #00ff88);
  }

  .container.mt-5.pt-5 {
    margin-top: 6rem;
    padding-top: 3rem;
  }

  .text-light a {
    color: #ffffff;
    text-decoration: none;
  }

  .text-light a:hover {
    color: #cccccc;
  }

  .fab, .fas {
    vertical-align: middle;
  }
</style>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
