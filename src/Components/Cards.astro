---
const { title = '', image = '', buttonText = '' } = Astro.props;

---

<div class="card">
  <img src={image} alt={title} />
  <h3>{title}</h3>
  <button>{buttonText}</button>
</div>

<style>
.card {
  width: 200px;
  height: 250px;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 16px;
  margin: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 8px;
}

.card h3 {
  margin-bottom: 8px;
}

.card button {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 8px 16px;
  cursor: pointer;
}
</style>