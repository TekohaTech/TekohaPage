---
const { title = 'Tekoha', image = '/LogoTekoha.png', buttonText = 'Ver m√°s' } = Astro.props;
---

<section class="card-container">
  <div class="card">
    <img src={image} alt={title} />
    <h3>{title}</h3>
    <button>{buttonText}</button>
  </div>
  <div class="card">
    <img src={image} alt={title} />
    <h3>{title}</h3>
    <button>{buttonText}</button>
  </div>
  <div class="card">
    <img src={image} alt={title} />
    <h3>{title}</h3>
    <button>{buttonText}</button>
  </div>
</section>

<style>
.card-container {
  display: flex;
  justify-content: center;
  gap: 16px;
  padding: 16px;
  background: linear-gradient(45deg, #00ff88, #1f11eb);
}

.card {
  width: 200px;
  height: 250px;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff; 
}

.card img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 8px;
}

.card h3 {
  margin-bottom: 8px;
}

.card button {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 8px 16px;
  cursor: pointer;
}
</style>
